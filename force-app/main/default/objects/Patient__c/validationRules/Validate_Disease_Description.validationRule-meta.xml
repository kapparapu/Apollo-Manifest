<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Disease_Description</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT( ISBLANK( Disease_Description__c ) ) , 
LEN(Disease_Description__c) &lt;= 100)</errorConditionFormula>
    <errorDisplayField>Disease_Description__c</errorDisplayField>
    <errorMessage>Please provide more description for the disease....!</errorMessage>
</ValidationRule>
